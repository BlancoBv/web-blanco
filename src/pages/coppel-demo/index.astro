---
import LayoutCoppel from "../../layouts/Coppel.astro"
---
<LayoutCoppel>

    <header>
    <h1>Mi cuenta</h1>
    <div class="header-icons">
      <i class="bi bi-search"></i>
      <i class="bi bi-cart"></i>
    </div>
  </header>

  <main>
    <section class="profile">
      <div class="avatar" id="avatar">FB</div>
      <div class="info">
        <h2 id="nombre">Francisco Blanco Lopez</h2>
        <p id="correo">dehara14@gmail.com</p>
      </div>
    </section>

    <div class="options">
      <a href="#" class="option">
        <i class="bi bi-person-fill"></i>
        <span>Mis datos</span>
        <i class="bi bi-chevron-right"></i>
      </a>

      <a href="#" class="option">
        <i class="bi bi-credit-card-2-back-fill"></i>
        <span>Crédito Coppel</span>
        <i class="bi bi-chevron-right"></i>
      </a>

      <a href="#" class="option">
        <i class="bi bi-truck"></i>
        <span>Mis pedidos</span>
        <i class="bi bi-chevron-right"></i>
      </a>

      <a href="#" class="option">
        <i class="bi bi-heart-fill"></i>
        <span>Mis favoritos</span>
        <i class="bi bi-chevron-right"></i>
      </a>
    </div>

    <button class="logout">Cerrar sesión</button>
  </main>

  <nav class="bottom-nav">
    <a href="#" class="nav-item">
      <i class="bi bi-house-door-fill"></i>
      <span>Inicio</span>
    </a>
    <a href="#" class="nav-item">
      <i class="bi bi-grid-3x3-gap-fill"></i>
      <span>Departamentos</span>
    </a>
    <a href="#" class="nav-item active">
      <i class="bi bi-person-fill"></i>
      <span>Mi cuenta</span>
    </a>
    <a href="#" class="nav-item">
      <i class="bi bi-list"></i>
      <span>Menú</span>
    </a>
  </nav>
</LayoutCoppel>
<script>
      const params = new URLSearchParams(window.location.search);
      const nombre = params.get('nombre')??"";
      const correo = params.get('correo')??"";
      console.log(nombre)

      const containerName = document.getElementById('nombre') as HTMLElement;
      containerName.innerHTML = nombre.split("_").join(" ");
      const containerCorreo = document.getElementById('correo') as HTMLElement;
      containerCorreo.innerHTML = correo;

      const containerAvatar = document.getElementById('avatar') as HTMLElement;
      containerAvatar.innerHTML= nombre.split("_").reduce((a,b,index,array)=> {
        if (index >= 2) return a

        return a + b.charAt(0)
      }, "")
    </script>
<style>
    * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
}

body {
  background: #fff;
  color: #0b1b58;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* HEADER */
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
}

header h1 {
  font-size: 1.8rem;
  font-weight: 700;
}

.header-icons i {
  font-size: 1.4rem;
  color: #0b1b58;
  margin-left: 1rem;
}

/* PROFILE SECTION */
.profile {
  display: flex;
  align-items: center;
  padding: 1rem 3rem;
  gap: 1rem;
}

.avatar {
  background: #0b1b58;
  color: #fff;
  font-weight: 600;
  font-size: 1.2rem;
  border-radius: 50%;
  width: 55px;
  height: 55px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info h2 {
  font-size: 1.1rem;
  font-weight: 600;
}

.info p {
  color: #666;
  font-size: 0.9rem;
}

/* OPTIONS */
.options {
  margin-top: 1rem;
}

.option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border: 1px solid #e5e5e5;
  border-radius: 1rem;
  margin: 0.5rem 1rem;
  padding: 0.9rem 1.2rem;
  text-decoration: none;
  color: #0b1b58;
  transition: background 0.2s ease;
}

.option i:first-child {
  font-size: 1.3rem;
  margin-right: 0.7rem;
}

.option span {
  flex: 1;
  margin-left: 0.5rem;
  font-size: 1rem;
  font-weight: 500;
}

.option:hover {
  background: #f3f3f3;
}

/* LOGOUT BUTTON */
.logout {
  display: block;
  margin: 2rem auto;
  background: none;
  border: none;
  color: #0b1b58;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
}

/* BOTTOM NAV */
.bottom-nav {
  margin-top: auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0.6rem 0;
  border-top: 1px solid #ddd;
  background: #fff;
  position: sticky;
  bottom: 0;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
  color: #666;
  font-size: 0.8rem;
}

.nav-item i {
  font-size: 1.4rem;
  margin-bottom: 0.2rem;
}

.nav-item.active {
  color: #0b1b58;
}

.nav-item.active i {
  color: #0b1b58;
}

</style>

